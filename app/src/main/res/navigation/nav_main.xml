<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/adminDashboardFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.attend.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.example.attend.feature.admin.AdminDashboardFragment"
        android:label="fragment_admin_dashboard"
        tools:layout="@layout/fragment_admin_dashboard">
        <action
            android:id="@+id/action_adminDashboardFragment_to_teachersFragment"
            app:destination="@id/teachersFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>
    </fragment>

    <fragment
        android:id="@+id/teachersFragment"
        android:name="com.example.attend.feature.admin.TeachersFragment"
        android:label="fragment_teachers"
        tools:layout="@layout/fragment_teachers"
        >

        <action
            android:id="@+id/action_teachersFragment_to_addTeacherFragment"
            app:destination="@id/addTeacherFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>
    </fragment>

    <fragment
        android:id="@+id/addTeacherFragment"
        android:name="com.example.attend.feature.admin.AddTeacherFragment"
        android:label="fragment_add_teacher"
        tools:layout="@layout/fragment_add_teacher" />

</navigation>